{
    "name": "womenofvalorant",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {},
        "ghcr.io/azure/azure-dev/azd:0": {},
        "ghcr.io/devcontainers/features/powershell:1": {},
        "ghcr.io/devcontainers/features/github-cli": {},
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true
        },
        "ghcr.io/devcontainers-extra/features/zsh-plugins:0": {},
        "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {},
        "ghcr.io/devcontainers/features/docker-in-docker": {},
        "ghcr.io/devcontainers/features/node": {},
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.stickyScroll.defaultModel": "outlineModel",
                "editor.stickyScroll.enabled": true,
                "notebook.stickyScroll.enabled": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll": "explicit",
                    "source.organizeImports": "explicit"
                }
            },
            "extensions": [
                "dotenv.dotenv-vscode",
                "bradlc.vscode-tailwindcss",
                "eamodio.gitlens",
                "EditorConfig.EditorConfig",
                "foxundermoon.shell-format",
                "GitHub.copilot-chat",
                "mhutchie.git-graph",
                "ms-azuretools.vscode-docker",
                "yzhang.markdown-all-in-one",
            ]
        }
    },
    "runArgs": [
        "--env-file",
        ".devcontainer/devcontainer.env",
        "--env-file",
        ".devcontainer/devcontainer.env.local"
    ],
    "onCreateCommand": "bash ./.devcontainer/onCreateCommand.sh",
    "postCreateCommand": "bash ./.devcontainer/postCreateCommand.sh",
    "postStartCommand": "bash ./.devcontainer/postStartCommand.sh",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/dummyOne/momentomori,type=bind",
    "workspaceFolder": "/workspace/dummyOne/momentomori",
    "mounts": [
        {
            "source": "${localWorkspaceFolder}/../shared-resources",
            "target": "/workspace/dummyOne/shared-resources",
            "type": "bind",
        }
    ]
}
